<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/naranjaClaro"
    android:orientation="vertical"
    tools:context=".LoginVerificacion">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="143dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="@string/consultaCorreo"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:text="@string/verificacion"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="@string/ingresaCodigo"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_codigo"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:fontFamily="@font/inter_regular"
        android:inputType="number"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="14sp" />



    <Button
        android:id="@+id/btn_verificar_login"
        android:layout_width="219dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/verificar"
        android:textAllCaps="false"
        android:textColor="@color/white" />


</LinearLayout>