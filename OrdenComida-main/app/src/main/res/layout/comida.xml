<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="3pt"
    android:background="@color/naranjaClaro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_comida"
            android:layout_width="168dp"
            android:layout_height="128dp"
            android:src="@drawable/teriyaki"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_nombre"
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:fontFamily="@font/inter_bold"
            android:text="Teriyaki"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_descripcion"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:fontFamily="@font/inter_regular"
            android:text="Verduras cebolla, brócoli,zanahoria,apio,calabaza con arroz, preparación e ingrediente a elegir, bañado con salsa teriyaki y ajonjoli espolvoreado"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tv_precio"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:layout_marginLeft="23dp"
            android:text="$150.00"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>