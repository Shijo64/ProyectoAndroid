<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/naranjaClaro"
    android:orientation="vertical"
    android:padding="3pt"
    tools:context=".Activities.EspecificacionBoneless">


    <ImageView
        android:id="@+id/iv_especificarEntrada"
        android:layout_width="129dp"
        android:layout_height="102dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/boneless" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:columnCount="2"
        android:paddingHorizontal="40dp">


        <TextView
            android:id="@+id/tv_nombrePlatillo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/inter_bold"
            android:text="Boneless"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:fontFamily="@font/inter_regular"
            android:text="$110.00"
            android:textColor="@color/white"
            android:textSize="15sp" />


    </GridLayout>

    <TextView
        android:id="@+id/tv_descripcion"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/white"
        android:textSize="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"


        android:fontFamily="@font/inter_bold"
        android:text="Eliga la salsa de tu elección"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:text="BBQ"
        android:textColor="@color/white" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:text="Búfalo"
        android:textColor="@color/white" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:text="Mixto"
        android:textColor="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btn_especificacion_agregar"
        android:layout_width="128dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="340dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/agregar"
        android:textAllCaps="false"
        android:textSize="11sp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btn_especificacion_regresar"
        android:layout_width="128dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/regresar"
        android:textAllCaps="false"
        android:textSize="11sp"
        android:textColor="@color/white"/>

</LinearLayout>